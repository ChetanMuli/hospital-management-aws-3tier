<%-include('navbar.ejs')%>

<form action="/admin/save_basic_info" method="post">

  <div class="container-fluid bg-info rounded-5 pt-4 text-white">
    <div class="row">
        <div class="col-md-12">
            <h3 class="text-center fw-bold text-success">Basic <span class="text-danger "> Information Form.....!</h3></span>
        </div>

        <div class="col-md-4">
            <label for="">Mobile Number</label>
            <input type="number" name="mobile_no" value="<%=basic_info[0].mobile_no%>" class="form-control" id="">
        </div>
        <div class="col-md-4">
            <label for="">Email Id </label>
            <input type="email" name="email_id" value="<%=basic_info[0].email_id%>" class="form-control" id="">
        </div>
        <div class="col-md-4">
            <label for="">Address</label>
            <input type="text" name="address" value="<%=basic_info[0].address%>" class="form-control" id="">
        </div>
        <div class="col-md-4 mt-3">
            <label for="">Twitter Link</label>
            <input type="url" name="twitter_link" value="<%=basic_info[0].twitter_link%>" class="form-control" id="">
        </div>
        <div class="col-md-4 mt-3">
            <label for="">Facebook Link</label>
            <input type="url" name="facebook_link" value="<%=basic_info[0].facebook_link%>" class="form-control" id="">
        </div>
        <div class="col-md-4 mt-3">
            <label for="">LinkedIn Link</label>
            <input type="url" name="linkedin_link" value="<%=basic_info[0].linkedin_link%>" class="form-control" id="">
        </div>
        <div class="col-md-4 mt-3">
            <label for="">Instagram Link</label>
            <input type="url" name="instagram_link" value="<%=basic_info[0].instagram_link%>" class="form-control" id="">
        </div>
        <div class="col-md-4 mt-3">
            <label for="">Google Map Link</label>
            <input type="url" name="google_map_link" value="<%=basic_info[0].google_map_link%>" class="form-control" id="">
        </div>
        <div class="col-md-4 mt-3" >
            <label for="">Heading</label>
            <input type="text" name="heading" value="<%=basic_info[0].heading%>" class="form-control" id="">
        </div>
        <div class="col-md-12 mt-3 text-center mb-4">
            <button class="btn btn-outline-warning text-white">Save  Information</button>
        </div>

    </div>

  </div>
</form>
<style>
    .form-control{
        border: 1px solid black;
    }
</style>
