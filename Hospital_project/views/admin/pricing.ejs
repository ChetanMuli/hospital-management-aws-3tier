                <textarea placeholder="enter heading"  class="form-control" name="pricing_heading"  id="" cols="30" rows="3"><%=pricing_info[0].pricing_heading%></textarea>
            </div>
            <div class="col-md-6">
                <textarea placeholder="enter sub heading"  class="form-control" name="pricing_sub_heading" id="" cols="30" rows="3"><%=pricing_info[0].pricing_sub_heading%></textarea>
            </div>
            <div class="col-md-12 mt-5 d-grid text-center">
                <button class="btn btn-primary  ">save pricing</button>
            </div>
        </div>
    </div>
    
