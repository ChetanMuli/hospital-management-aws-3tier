<%- include("navbar.ejs")%>

    <!-- Carousel Start dynamic -->
    <div class="container-fluid p-0">
        <div id="header-carousel" class="carousel slide carousel-fade" data-bs-ride="carousel">
            <div class="carousel-inner">
                <% slides.forEach((val,i)=>{ %>
                    <div></div>


                    <div class="carousel-item <%=(i==0) ? 'active':''%>  ">
                        <img class="w-100" style="height: 600px;" src="/img/<%=val.slider_image%>" alt="Image">
                        <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                            <div class="p-3" style="max-width: 900px;">
                                <h5 class="text-white text-uppercase mb-3 animated slideInDown">
                                    <%=val.slider_short_title%>
                                </h5>
                                <h1 class="display-1 text-white mb-md-4 animated zoomIn">
                                    <%=val.slider_title%>
                                </h1>
                                <a href="/appointment"
                                    class="btn btn-primary py-md-3 px-md-5 me-3 animated slideInLeft">Appointment</a>
                                <a href="/contact"
                                    class="btn btn-secondary py-md-3 px-md-5 animated slideInRight">Contact Us</a>
                            </div>
                        </div>
                    </div>
                    <%}) %>

            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#header-carousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#header-carousel" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
    <!-- Carousel End -->

    <!-- Banner Start 1/2 dynamic -->
    <% function gethoursin12(time){ var num=time.split(":")[0]; if(num>12){
        num=num%12;

        }
        return num+":"+time.split(":")[1];
        }
        %>
        <div class="container-fluid banner mb-5">
            <div class="container">
                <div class="row gx-3 mt-4 ">

                    <div class="col-lg-4 wow fadeInLeft   " data-wow-delay="0.2s">
                        <div class="bg-warning d-flex flex-column p-5" style="height: 300px;">
                            <h3 class="text-white mb-3 text-center">Opening Hours</h3>
                            <% opening_hours.forEach((val,i)=>{ %>
                                <div class="d-flex justify-content-between text-white mb-3">
                                    <h6 class="text-white mb-0">
                                        <%=val.day%>
                                    </h6>
                                    <p class="mb-0">
                                        <%=gethoursin12(val.open_time)%>am - <%=gethoursin12(val.close_time)%>pm
                                    </p>
                                </div>
                                <% }) %>
                                    <a class="btn btn-light" href="/appointment">Appointment</a>
                        </div>
                    </div>

                    <div class="col-lg-4 wow zoomIn" data-wow-delay="0.3s">
