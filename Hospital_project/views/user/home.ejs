                                <div class="row g-3">
                                    <div class="col-12 col-sm-6">
                                        <select name="service_id" onchange="getDoctorList()" required id="service_box"
                                            class="form-select bg-light border-0" style="height: 55px;">
                                            <option selected value="">Select A Service</option>
                                            <% services.forEach((val)=>{%>
                                                <option value="<%=val.service__id%>">
                                                    <%=val.services_name%>
                                                </option>
                                                <%}) %>

                                        </select>
                                    </div>
                                    <div class="col-12 col-sm-6">
                                        <select id="doctore_box" name="doctor_id" required
